<style type="text/css">
  body {
    background-color: #dac;
    color: #222;
    font-family: "helvetica", sans-serif;
    overflow: hidden;
  }

  #homespace {
    display: -webkit-flex;
    display: flex;
    justify-content: center;
    -webkit-justify-content: center;
    border: 2px solid #222;
  }

  #textarea {
    padding: 10%;
    left: 20%;
  }

  #subpages {
    border: 2px solid #222;
    border-bottom: 0px solid #222;
    display: -webkit-flex;
    -webkit-justify-content: left;
    display: flex;
    justify-content: left;
  }

  #subpages>button {
    width: 15%;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    border: 0px;
    padding: 5px;
    background-color: #dac; /* Pink */
    color: #222;
  }

  #subpages>button:hover {
    background-color: #fce; /* Lighter pink */
  }

  #carousel {
    max-width: 500px;
  }

  .slide {
    display: none;
  }

  #prev {
    cursor: pointer;
    position: absolute;
    top: 50%;
    margin-top: -21px;
    padding: 15px;
    width: auto;
    color: #ddd;
    transition: 0.6s ease;
    user-select: none;
  }

  #next {
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -21px;
    padding: 15px;
    width: auto;
    color: #ddd;
    user-select: none;
    transition: 0.6s ease;
  }

  #prev:hover, #next:hover {
    background-color: #888;
  }

  .imgText {
    padding: 8px 12px;
    position: absolute;
    bottom: 8px;
    width: 100%;
    text-align: center;
  }

  /* Number text (1/3 etc) */
  .xof3 {
    padding: 8px 12px;
    position: absolute;
    top: 0;
  }
</style>

<div id="subpages">
  <button id="page1">Scroll Box</button>
  <button id="page2">Unordered List</button>
  <button id="page3">Form/Download</button>
</div>

<div id="homespace">
  <header id="textarea">
    <h1>Welcome to Luke's Cool Website</h1>
    <h3>I hope you enjoy your stay!</h3>
    <p><a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Or click here to go to youtube instead</a></p>
  </header>

  <div id="carousel">
    <div class="slide">
      <div class="xOf3">1 / 3</div>
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/71/2010-kodiak-bear-1.jpg/330px-2010-kodiak-bear-1.jpg" style="width:100%">
      <div class="imgText">Kodiak Bear</div>
    </div>

    <div class="slide">
      <div class="xOf3">2 / 3</div>
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/db/Al-Idrisi%27s_world_map.JPG/450px-Al-Idrisi%27s_world_map.JPG" style="width:100%">
      <div class="imgText">The Tabula Rogeriana</div>
    </div>

    <div class="slide">
      <div class="xOf3">3 / 3</div>
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f2/DVD_Rental_Query.png/330px-DVD_Rental_Query.png" style="width:100%">
      <div class="imgText">An example database response</div>
    </div>

    <a id="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a id="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
</div>

<marquee width="100%" direction="left" height="100px">Whee!</marquee>

<script type="text/javascript">
  document.getElementById("page1").onclick = function () {
    location.href = "http://flip3.engr.oregonstate.edu:42066/page1";
  };
  document.getElementById("page2").onclick = function () {
    location.href = "http://flip3.engr.oregonstate.edu:42066/page2";
  };
  document.getElementById("page3").onclick = function () {
    location.href = "http://flip3.engr.oregonstate.edu:42066/page3";
  };
  //This is for button interactions (maybe?), and probably the carousel
  //carousel below
  var slideIndex = 1;
  showSlides(slideIndex);

  // Next/previous controls
  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  // Thumbnail image controls
  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }
    slides[slideIndex-1].style.display = "block";
  }
  //Starting the carousel
  currentSlide(1);

</script>
